<Window x:Class="Bibliothek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliothek"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel Orientation="Vertical" Width="100" DockPanel.Dock="Right">
            <Button Height="30" Name="btnFett" Click="btnFett_Click" Margin="5,5,5,5">Fett</Button>
            <Button Height="30" Name="btnLaden" Click="btnLaden_Click" Margin="5,0,5,5">Laden</Button>
            <Button Height="30" Name="btnSpeichern" Click="btnSpeichern_Click" Margin="5,0,5,5">Speichern</Button>
        </StackPanel>
        <RichTextBox Name="rtbDocument" Margin="5,5,5,5" Background="LightGray" FontSize="18"></RichTextBox>
    </DockPanel>
</Window>