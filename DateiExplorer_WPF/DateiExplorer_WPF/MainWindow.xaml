<Window x:Class="DateiExplorer_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DateiExplorer_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Name="eingabe" HorizontalAlignment="Left" Height="50" Margin="25,25,0,0" TextWrapping="Wrap" Text="Verzeichnis bitte eingeben" VerticalAlignment="Top" Width="200" TextChanged="eingabe_TextChanged"/>
        <Label Name="ausgabe" HorizontalAlignment="Left" Height="50" Margin="25,100,0,0" TextWrapping="Wrap" Text="Ausgabe erfolgt hier" VerticalAlignment="Top" Width="200" Background="Purple" Foreground="White" />

    </Grid>
</Window>
