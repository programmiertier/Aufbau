<Window x:Class="DateiExplorer_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DateiExplorer_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Name="eingabe" HorizontalAlignment="Left" Height="50" Margin="25,25,0,0" TextWrapping="Wrap" Text="Verzeichnis bitte eingeben" VerticalAlignment="Top" Width="200" />
        <Button Name="knopf" Content="senden" HorizontalAlignment="Left" Margin="25,-75,0,0" Height="25"  Click="knopf_Click"/>
        <Label Name="ausgabe" Content="hier ausgabe" HorizontalAlignment="Left" Height="auto" Margin="25,150,0,0" VerticalAlignment="Top" Width="auto" Background="DarkCyan" Foreground="White" />
        
    </Grid>
</Window>
